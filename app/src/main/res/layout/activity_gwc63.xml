<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2196F3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="购物车"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/gl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="管理"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/xiahuaxian"
        android:orientation="horizontal">

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuanbeijing8"
            android:gravity="center"
            android:text="使用日期"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/jt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@drawable/xiahuaxian2"
            android:gravity="center"
            android:text="今天05/24预定"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="明天05/25预定"
            android:textColor="#9A9A9A"
            android:textSize="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="更多日期"
            android:textColor="#000"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="100dp"
            android:src="@drawable/you" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="产品名称"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="简介"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="数量"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>


    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="总金额:120元"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/zf"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/yuanbeijing11"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="#fff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/qk"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/yuanbeijing10"
            android:gravity="center"
            android:text="清空购物车"
            android:textColor="#000"
            android:textSize="30dp" />


    </LinearLayout>


</LinearLayout>